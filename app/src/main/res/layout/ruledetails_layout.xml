<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/folder_options_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mg.masmsestro.RuleDetailsActivity"
    tools:layout_editor_absoluteY="137dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarRule"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:clickable="true"
            android:elevation="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <EditText
        android:id="@+id/rule_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@color/turquise"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"

        />

    <EditText
        android:id="@+id/RulePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@color/turquise"
        android:ems="10"
        android:inputType="phone"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/RuleKeyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@color/turquise"
        android:ems="10"
        android:inputType="phone"
        android:textColor="@color/colorPrimary" />


    <Spinner
        android:id="@+id/folderlist_rule"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="182dp" />

    <Button
        android:id="@+id/btn_Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="150dp"
        android:background="@color/colorPrimary"
        android:shadowColor="@color/colorPrimaryDark"
        android:shadowDy="2"


        android:text="@string/save"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/btn_Cancel"
        tools:shadowDx="2" />

    <Button
        android:id="@+id/btn_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="150dp"

        android:text="@string/cancel"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteY="206dp" />

</android.support.design.widget.CoordinatorLayout>
